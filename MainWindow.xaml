<Window x:Class="ZiraceVideoPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZiraceVideoPlayer"
        mc:Ignorable="d"
        Title="Zirace" Height="600" Width="1000"
        KeyDown="Window_KeyDown"
        Background="Black">

    <Window.Resources>
        <!-- Menu Style -->
        <Style TargetType="Menu">
            <Setter Property="Background" Value="#2C2C2C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontSize" Value="14" />
        </Style>

        <!-- Dropdown MenuItem Style -->
        <!-- MenuItem Style with Child Menu Support -->
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#2C2C2C" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="MenuItem">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="#444"
                                BorderThickness="0">
                            <Grid>
                                <ContentPresenter ContentSource="Header" Margin="5,0" RecognizesAccessKey="True"/>
                                <Popup x:Name="SubMenuPopup"
                                       Placement="Bottom"
                                       IsOpen="{TemplateBinding IsSubmenuOpen}"
                                       AllowsTransparency="True">
                                    <Border Background="#2C2C2C" CornerRadius="5" 
                                            BorderBrush="#444" BorderThickness="1">
                                        <ItemsPresenter />
                                    </Border>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <!-- Hover Effect -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444" />
                    <Setter Property="Foreground" Value="#FFD700" />
                </Trigger>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#555" />
                    <Setter Property="Foreground" Value="#FFD700" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Separator Styling -->
        <Style TargetType="Separator">
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="Background" Value="#666" />
            <Setter Property="Height" Value="1" />
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#CC444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Opacity" Value="0.9" />
        </Style>
    </Window.Resources>





    <!-- All content -->
    <DockPanel LastChildFill="True">

        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top" Background="#2C2C2C" Foreground="White">
            <MenuItem Header="_File">
                <MenuItem Header="Open Video..." Click="OpenVideo_Click"/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View" >
                <MenuItem Header="Fullscreen" Click="ToggleFullscreen_Click"/>
                <MenuItem Header="Minimize" Click="Minimize_Click"/>
            </MenuItem>
            <MenuItem Header="_Help" >
                <MenuItem Header="About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid>
            <!-- MediaElement (Video Area) -->
            <MediaElement Name="mediaElement" LoadedBehavior="Manual" Stretch="Uniform" Focusable="False"/>

            <!-- Overlay Panel for Controls and Duration Slider -->
            <Grid Name="OverlayPanel" VerticalAlignment="Bottom" Background="#80000000" 
          Height="105" Visibility="Visible" Focusable="False">
                <Grid.RowDefinitions>
                    <!-- Slider Row -->
                    <RowDefinition Height="Auto" />
                    <!-- Controls Row -->
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Duration Slider with Time Labels -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="7">
                    <!-- Elapsed Time -->
                    <TextBlock Name="ElapsedTime" Text="00:00" Foreground="White" Width="50" VerticalAlignment="Center" />

                    <!-- Slider for Duration -->
                    <Slider Name="DurationSlider" Width="800" Margin="5,0" 
                    Minimum="0" Maximum="100" Value="0"
                    PreviewMouseDown="DurationSlider_PreviewMouseDown"
                    PreviewMouseUp="DurationSlider_PreviewMouseUp"
                    ValueChanged="DurationSlider_ValueChanged" 
                    Focusable="False"/>

                    <!-- Remaining Time -->
                    <TextBlock Name="RemainingTime" Text="-00:00" Foreground="White" Width="50" VerticalAlignment="Center" />
                </StackPanel>

                <!-- Control Panel -->
                <Border HorizontalAlignment="Stretch" VerticalAlignment="Bottom" 
                    Margin="10" Padding="10" Grid.Row="1">
                    <!-- Assigned to Row 1 -->
                    <DockPanel LastChildFill="False">
                        <!-- Controls StackPanel -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                                    DockPanel.Dock="Left">
                            <!-- Back 10 seconds Button -->
                            <Button x:Name="btnBack" Content="-10s" Click="btnBack_Click" 
                            Margin="5" Width="65" Height="35"/>

                            <!-- Play Button -->
                            <Button x:Name="btnPlay" Content="Play" Click="btnPlay_Click" 
                            Margin="5" Width="65" Height="35"/>

                            <!-- Pause Button -->
                            <Button x:Name="btnPause" Content="Pause" Click="btnPause_Click" 
                            Margin="5" Width="65" Height="35"/>

                            <!-- Forward 10 seconds Button -->
                            <Button x:Name="btnForward" Content="+10s" Click="btnForward_Click" 
                            Margin="5" Width="65" Height="35"/>
                        </StackPanel>

                        <!-- Volume Slider on the Right -->
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" DockPanel.Dock="Right" Margin="10,0,0,0">
                            <!-- Volume Icon -->
                            <TextBlock Text="🔊" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>

                            <!-- Volume Slider -->
                            <Slider Name="volumeSlider" Width="100" Minimum="0" Maximum="1" 
                            Value="0.5" TickFrequency="0.1" 
                            ValueChanged="volumeSlider_ValueChanged"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>

    </DockPanel>
</Window>
